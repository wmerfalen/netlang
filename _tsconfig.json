{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
		"allowJs": true
  },
  "exclude": [
    "next.config.js",
    "node_modules",
		"dist"
  ],
  "include": [
    "src/transports/*.ts",
    "src/main.ts"
  ]
}
